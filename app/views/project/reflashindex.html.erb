<%=render :partial => 'classify'%>

  <div id="container">
    <div>
      <% @allproject.each do |p|%>
      <div id="id-item" class="item">
        <div id="id-item-name">
          <%= simple_format p.Pname%>
        </div>
        <center><a href=<%=project_path(p.id)%>><img src=<%=p.Ppic%>></a></center>
	<div>發起者：<%= p.user.name%></div>
        <% case p.Pclassify%>
  	  <%when '1'%>
    	    <div>分類：設計商品</div>
  	  <%when '2'%>
    	    <div>分類：音樂影視</div>
  	  <%when '3'%>
    	    <div>分類：舞台演出</div>
  	  <%when '4'%>
    	    <div>分類：休閒娛樂</div>
  	  <%when '5'%>
    	    <div>分類：創作出版</div>
  	  <%when '6'%>
    	    <div>分類：社會文化</div>
  	  <%when '7'%>
    	    <div>分類：科技應用</div>
  	  <%when '8'%>
    	    <div>分類：美食饗宴</div>
	<% end %>
        <div id="id-item-describe">
          <%= simple_format p.Pdescribe%>
        </div>
	<div>剩餘天數：<%= p.days%></div>
      </div>
      <% end %>
    </div>
  </div>

<script>
        
$(function(){
      var $container = $('#container');
  $container.imagesLoaded(function(){
    $container.masonry({
      itemSelector : '.item',
      isAnimated: true,
      isFitWidth: true,
      columnWidth : 30          
    });         
  });           
});             
</script>
