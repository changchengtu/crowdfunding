<div id="showname">
  <%= @thisp.name%>
</div>
<div id="showcontext">
	<div style="float:left;">
	<center>
 		 <div id="showmedia">
  		  <%= @thisp.video.html_safe%>
  		</div>	
  	</center>	
  		<div id="showsummary">
   			 <%= simple_format @thisp.summary%>
 		 </div>
 	
  	</div>

  <div style="font-family: 微軟正黑體; float: left; font-size:15px;color:#607B8B;">
	發起者：<%= @thisp.user.name%>
  </div>
  <div style="font-family: 微軟正黑體; float: right; font-size:15px;color:#607B8B;">
    e-mail：<%= @thisp.user.email%>
  </div>

	<div style="float:left;">
  		 <div id="showinfo" >
  	 		<p style="font-size: 18px;"> 剩餘天數：</p><%= @thisp.days%></br>
   			 <p style="font-size: 18px;">目前募集：</p><%= @thisp.got%></br>
 	 		 <center><a href="/invest/<%= @thisp.id%>/edit"><div style="width:100%; height:40px; background-color:#d44413; border-radius: 5px;font-size:35px;">出資</div></a></center>
	 	 </div>
 		 <div id="showteam" >
			<p style="font-size: 20px;">團隊介紹:</p></br>
  			  <%= @thisp.intro%>
  	         </div>
                <%@allinvest.each do|invest|%>
		  <div id="showInvest">
		  	<p style="font-size: 18px;">暱稱：</p><%=invest.user_id%></br>
		  	<p style="font-size: 18px;">→投資金額：</p><%=invest.howmuch%>
		  </div>

		<%end%>
		
	</div>
	


<div style="width:300px;height:auto;">
  <% @message.each do |m|%>

	   問題： <%=m.message%></br>
  <%end%>
  <%= form_tag '/project/postmessage', :method=>:put do %>
    
    
    <%= label :message, :message, '問題'%>
    <%= text_field :message, :message, :value=>"？"%>

    <%= hidden_field :message, :pro_id, :value=>@thisp.id%>    
    <%= hidden_field :message, :ques, :value=>true%>

    <%= submit_tag '確定送出'%>
  <% end %>
</div>

</div>


